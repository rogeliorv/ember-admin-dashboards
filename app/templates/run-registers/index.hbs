<section class="content-header">
  <h1>
    <i class="fa fa-dashboard"></i> My running dashboard
    <small>You have {{model.length}}
      {{#if (gt model.length 1)}}runs{{else}}run{{/if}} recorded
    </small>
  </h1>
</section>

<section class="content">
	<div class="row">
    <div class="col-xs-12 col-sm-6 col-md-4">
      {{link-to "Add running record" "runRegisters.new" }}
    </div>
  </div>

  {{#if model.length}}

    <div class="row">
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="small-box bg-green">
            <div class="inner">
              <h3> Best speed </h3>
              <p> {{model.summaryData.bestSpeedRun.speedFixed}} km/h </p>
            </div>
            <div class="icon"><i class="ion ion-ios-bolt"></i></div>
            {{# link-to "runRegisters" class="small-box-footer" }} {{model.summaryData.bestSpeedRun.distance }} km over {{ model.summaryData.bestSpeedRun.time }} minutes {{/link-to}}
        </div>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="small-box bg-red">
            <div class="inner">
              <h3> Worst speed </h3>
              <p>{{model.summaryData.worstSpeedRun.speedFixed}} km/h</p>
            </div>
            <div class="icon"> <i class="ion ion-ios-bolt"></i></div>
            {{# link-to "runRegisters" class="small-box-footer" }} {{model.summaryData.worstSpeedRun.distance }} km over {{ model.summaryData.worstSpeedRun.time }} minutes {{/link-to}}
        </div>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="small-box bg-blue">
            <div class="inner">
              <h3> Avg speed </h3>
              <p>{{model.summaryData.averageSpeed}} km/h</p>
            </div>
            <div class="icon"> <i class="ion ion-ios-bolt"></i></div>
            {{# link-to "runRegisters" class="small-box-footer" }}Out of {{model.length}} runs{{/link-to}}
        </div>
      </div>
    </div>


    <div class="row">
  		<div class="col-xs-12 col-sm-6 col-md-4">
        <div class="small-box bg-green">
            <div class="inner">
              <h3> Best dist. </h3>
              <p> {{model.summaryData.bestDistanceRun.distance}} km </p>
            </div>
            <div class="icon"><i class="ion ion-ios-paw"></i></div>
            {{# link-to "runRegisters" class="small-box-footer" }}Average speed {{ model.summaryData.bestDistanceRun.speed }} km/h{{/link-to}}
        </div>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="small-box bg-red">
            <div class="inner">
              <h3> Worst dist. </h3>
              <p>{{model.summaryData.worstDistanceRun.distance}} km </p>
            </div>
            <div class="icon"> <i class="ion ion-ios-paw"></i></div>
            {{# link-to "runRegisters" class="small-box-footer" }}Average speed {{ model.summaryData.worstDistanceRun.speed }} km/h{{/link-to}}
        </div>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="small-box bg-blue">
            <div class="inner">
              <h3> Avg dist. </h3>
              <p>{{model.summaryData.averageRunDistance}} km</p>
            </div>
            <div class="icon"> <i class="ion ion-ios-paw"></i></div>
            {{# link-to "runRegisters" class="small-box-footer" }}Out of {{model.length}} runs{{/link-to}}
        </div>
      </div>
    </div>



    <div class="row">
  		<div class="col-xs-12 col-sm-6 col-md-4">
        <div class="small-box bg-green">
            <div class="inner">
              <h3> Best time </h3>
              <p> {{model.summaryData.bestTimeRun.time}} minutes </p>
            </div>
            <div class="icon"><i class="ion ion-clock"></i></div>
            {{# link-to "runRegisters" class="small-box-footer" }}Average Speed {{model.summaryData.bestTimeRun.speed }} km/h {{/link-to}}
        </div>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="small-box bg-red">
            <div class="inner">
              <h3> Worst Time </h3>
              <p>{{model.summaryData.worstTimeRun.time}} minutes</p>
            </div>
            <div class="icon"> <i class="ion ion-clock"></i></div>
            {{# link-to "runRegisters" class="small-box-footer" }}Average Speed {{model.summaryData.worstTimeRun.speed }} km/h {{/link-to}}
        </div>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="small-box bg-blue">
            <div class="inner">
              <h3> Avg Time </h3>
              <p>{{model.summaryData.averageRunTime}} minutes</p>
            </div>
            <div class="icon"> <i class="ion ion-clock"></i></div>
            {{# link-to "runRegisters" class="small-box-footer" }}Out of {{model.length}} runs{{/link-to}}
        </div>
      </div>
    </div>

    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Time</th>
            <th>Distance</th>
            <th>Average Speed</th>
            <th>Date</th>
            <th>Location</th>
            <th colspan="2"> Actions </th>

          </tr>
        </thead>
        <tbody>
          {{#each model as |runRegister|}}
            {{ log user }}

            <tr>
              <td> {{runRegister.time}} minutes </td>
              <td> {{runRegister.distance}} km</td>
              <td> {{runRegister.speedFixed}} km/h</td>
              <td> {{runRegister.date}} </td>
              <td> {{runRegister.location}}</td>
              <td> {{# link-to "runRegisters.edit" runRegister }}<i class="fa fa-pencil"></i>{{/link-to}}</td>
              <td> <a href="#" {{action "remove" runRegister}}><i class="fa fa-trash"></i></a> </td>


            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  {{else}}
    <p id="blankslate">
      You have no running data
    </p>
  {{/if}}

</section>
