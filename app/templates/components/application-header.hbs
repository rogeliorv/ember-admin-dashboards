<!-- Logo -->
{{#link-to "index" class="logo"}}<b>AMM</b>Test<b>Run</b>{{/link-to}}
<!-- Header Navbar: style can be found in header.less -->
<nav class="navbar navbar-static-top" role="navigation">
  <!-- Sidebar toggle button-->
  <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
    <span class="sr-only">Toggle navigation</span>
  </a>
  <!-- Navbar Right Menu -->
  <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">
        <!-- User Account: style can be found in dropdown.less -->
            {{#if session.isAuthenticated }}
              <li class="dropdown user user-menu">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <img src="dist/img/user2-160x160.jpg" class="user-image" alt="User Image"/>
                    <span class="hidden-xs">{{friendlyName}}</span>
                  </a>
                  <ul class="dropdown-menu">
                    <!-- User image -->
                    <li class="user-header">
                      <img src="dist/img/user2-160x160.jpg" class="img-circle" alt="User Image" />
                      <p>
                        {{ friendlyName }} - Runner
                        {{ log currentUser.user.dateJoined }}
                        <small>Member since {{ moment-format currentUser.user.dateJoined 'MMMM D, YYYY'}}</small>

                      </p>
                    </li>
                    <!-- Menu Footer-->
                    <li class="user-footer">
                      <div class="pull-left">
                        {{#link-to "users.edit" currentUser.user.id class="btn btn-default btn-flat"}}Profile{{/link-to}}
                      </div>
                      <div class="pull-right">
                        <a {{ action 'invalidateSession'}} class="btn btn-default btn-flat">Sign out</a>
                      </div>
                    </li>
                  </ul>
                </li>
              {{ else }}
                {{#link-to 'login'}}Login{{/link-to}}
                {{#link-to 'register'}}Register{{/link-to}}
              {{/if}}
      </ul>
  </div>
</nav>
